
<div class="col-md-4 col-md-offset-2 text-center">
    <div class="service-item">
        <div class="btn-group pull-right">
          <i class="icon-list"></i><a href="#" data-toggle="modal" data-target="#myModal">New</a>
    </div>
    </div>
</div>

<%= form_for @admin, :url => admin_index_path do |f| %>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
		    <div class="modal-header">
		       	<h4 class="modal-title" id="myModalLabel">New Session:</h4>
		    </div>
		    <div class="modal-body">
		    	<div class="form-group">
    				<%= f.label :topic, 'Topic' %><br/>
    				<%= f.text_field :topic %><br/>
  				</div>
  				<div class="form-group">
    				<%= f.label :speaker, 'Speaker' %><br/>
    				<%= f.text_field :speaker %><br/>
  				</div>
  				<div class="form-group">
    				<%= f.label :time, 'Time' %><br/>
    				<%= f.time_select :time %><br/>
  				</div>
  				<%= f.button :submit %>
		    </div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div>
<%end%>